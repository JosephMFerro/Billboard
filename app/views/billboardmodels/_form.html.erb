<%= form_with(model: billboardmodel, local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, placeholder: "Billboard Name" %>
  </div>
  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location, required: true, placeholder: "Country / City / State" %>
  </div>
  <div class="field">
    <%= f.label :image %>
    <%= f.text_field :image, required: false, placeholder: "Image URL" %>
  </div>
  <br />
  <%= f.submit nil, class: "ui button primary"%>
<% end %>