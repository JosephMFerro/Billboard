<%= form_with(model: song, local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, placeholder: "Song Name" %>
  </div>
  <div class="field">
    <%= f.label :artist %>
    <%= f.text_field :artist, required: true, placeholder: "Artist" %>
  </div>
  <br />
  <%= f.submit nil, class: "ui button primary"%>
<% end %>